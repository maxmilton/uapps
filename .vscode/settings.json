{
  "biome.enabled": false, // use dprint
  "css.validate": false,
  "editor.colorDecorators": true,
  "editor.defaultFormatter": "dprint.dprint",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on",
    "other": "on",
  },
  "editor.tabSize": 2,
  "eslint.enable": true,
  "eslint.validate": ["javascript", "typescript"],
  "files.associations": {
    "*.bun": "typescript", // files use hashbang: #!/usr/bin/env bun
    "*.css": "tailwindcss",
    "*.xcss": "scss",
    "package.json": "jsonc",
  },
  "git.branchProtection": ["master", "next"],
  "javascript.validate.enable": true,
  "js/ts.implicitProjectConfig.checkJs": true,
  "prettier.enable": false, // use dprint
  "scss.validate": false,
  "stylelint.enable": true,
  "stylelint.validate": ["css", "scss", "tailwindcss"],
  "tailwindCSS.classFunctions": ["tw", "css"],
  "tailwindCSS.validate": true,
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.validate.enable": true,
  "yaml.validate": true,
}
