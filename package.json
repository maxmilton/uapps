{
  "private": true,
  "workspaces": [
    "packages/*",
    "workers/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "export NODE_ENV=development; bun run build",
    "start": "NODE_ENV=development turbo startall",
    "lint": "turbo lint:css lint:fmt lint:js lint:js2 lint:ts",
    "lint:css": "stylelint '**/*.css'",
    "lint:fmt": "biome check --diagnostic-level=warn",
    "lint:js": "oxlint --format=stylish",
    "lint:js2": "eslint",
    "lint:ts": "tsc --build --noEmit",
    "test": "bun test",
    "typegen": "turbo typegen"
  },
  "overrides": {
    "bugbox": "link:bugbox"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@cloudflare/workers-types": "4.20250620.0",
    "@eslint/js": "9.29.0",
    "@maxmilton/eslint-config": "0.2.1",
    "@maxmilton/stylelint-config": "0.3.0",
    "@maxmilton/test-utils": "0.0.11",
    "@types/bun": "1.2.17",
    "eslint": "9.29.0",
    "eslint-plugin-oxlint": "1.3.0",
    "eslint-plugin-unicorn": "59.0.1",
    "happy-dom": "18.0.1",
    "oxlint": "1.3.0",
    "stylelint": "16.21.0",
    "stylelint-config-standard": "38.0.0",
    "turbo": "2.5.4",
    "typescript": "5.8.3",
    "typescript-eslint": "8.35.0",
    "wrangler": "4.21.0"
  },
  "packageManager": "bun@1.99.0"
}
