{
  "private": true,
  "workspaces": [
    "packages/*",
    "workers/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "export NODE_ENV=development; bun run build",
    "lint": "turbo lint:css lint:fmt lint:oxlint lint:js lint:ts",
    "lint:css": "stylelint '**/*.{css,xcss}'",
    "lint:fmt": "biome check",
    "lint:oxlint": "oxlint --format=stylish --ignore-path=.gitignore",
    "lint:js": "eslint",
    "lint:ts": "tsc --build --noEmit",
    "test": "bun test",
    "typegen": "turbo typegen"
  },
  "overrides": {
    "@types/node": "24.10.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@cloudflare/workers-types": "4.20251111.0",
    "@eslint/js": "9.39.1",
    "@maxmilton/eslint-config": "0.3.0",
    "@maxmilton/stylelint-config": "0.4.2",
    "@maxmilton/test-utils": "0.0.13",
    "@types/bun": "1.3.2",
    "eslint": "9.39.1",
    "eslint-plugin-oxlint": "1.28.0",
    "eslint-plugin-unicorn": "62.0.0",
    "happy-dom": "20.0.10",
    "oxlint": "1.28.0",
    "stylelint": "16.26.1",
    "stylelint-config-standard": "39.0.1",
    "turbo": "2.6.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.4",
    "wrangler": "4.47.0"
  },
  "packageManager": "bun@1.99.0"
}
