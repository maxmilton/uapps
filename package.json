{
  "private": true,
  "workspaces": [
    "packages/*",
    "workers/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "export NODE_ENV=development; bun run build",
    "start": "NODE_ENV=development turbo startall",
    "lint": "turbo lint:css lint:fmt lint:js lint:js2 lint:ts",
    "lint:css": "stylelint '**/*.{css,xcss}'",
    "lint:fmt": "dprint check",
    "lint:js": "oxlint --format=stylish",
    "lint:js2": "eslint",
    "lint:ts": "tsc --build --noEmit",
    "test": "bun test",
    "typegen": "turbo typegen"
  },
  "overrides": {
    "@types/node": "24.9.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20251014.0",
    "@eslint/js": "9.38.0",
    "@maxmilton/eslint-config": "0.3.0",
    "@maxmilton/stylelint-config": "0.4.2",
    "@maxmilton/test-utils": "0.0.13",
    "@types/bun": "1.3.1",
    "dprint": "0.50.2",
    "eslint": "9.38.0",
    "eslint-plugin-oxlint": "1.24.0",
    "eslint-plugin-unicorn": "62.0.0",
    "happy-dom": "20.0.10",
    "oxlint": "1.25.0",
    "stylelint": "16.25.0",
    "stylelint-config-standard": "39.0.1",
    "turbo": "2.5.8",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.2",
    "wrangler": "4.45.2"
  },
  "packageManager": "bun@1.99.0"
}
