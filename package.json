{
  "private": true,
  "scripts": {
    "build": "pnpm run -r build",
    "lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:ts",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.{css,xcss}'",
    "lint:js": "eslint --ignore-path .gitignore --ext .cjs,.js,.jsx,.mjs,.ts,.tsx .",
    "lint:ts": "tsc --project tsconfig.lint.json",
    "test": "c8 uvu -r tsm packages '\\/test\\/.+\\.test\\.ts$'"
  },
  "devDependencies": {
    "@maxmilton/stylelint-config": "0.0.10",
    "@types/node": "18.11.11",
    "@typescript-eslint/eslint-plugin": "5.45.1",
    "@typescript-eslint/parser": "5.45.1",
    "c8": "7.12.0",
    "esbuild": "0.15.17",
    "eslint": "8.29.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-security": "1.5.0",
    "eslint-plugin-unicorn": "45.0.1",
    "prettier": "2.8.0",
    "prettier-plugin-pkg": "0.17.1",
    "prettier-plugin-sh": "0.12.8",
    "stylelint": "14.16.0",
    "stylelint-config-standard": "29.0.0",
    "tsm": "2.3.0",
    "typescript": "4.9.3",
    "uvu": "0.5.6"
  },
  "c8": {
    "all": true,
    "include": [
      "packages/*/src"
    ],
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "pluginSearchDirs": [
      "."
    ],
    "overrides": [
      {
        "files": [
          "*.test.ts"
        ],
        "options": {
          "printWidth": 100
        }
      }
    ]
  },
  "stylelint": {
    "reportInvalidScopeDisables": true,
    "reportNeedlessDisables": true,
    "extends": [
      "stylelint-config-standard",
      "@maxmilton/stylelint-config"
    ],
    "ignoreFiles": [
      "**/dist/**",
      "**/node_modules/**"
    ],
    "rules": {
      "import-notation": null,
      "function-name-case": null,
      "function-no-unknown": null
    }
  }
}
