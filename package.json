{
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "bun run --filter '*' --if-present build",
    "lint": "bun run lint:fmt && bun run lint:css && bun run lint:js && bun run lint:ts",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.{css,xcss}'",
    "lint:fmt": "biome check",
    "lint:js": "eslint",
    "lint:ts": "tsc --noEmit",
    "test": "bun test --preload ./test/setup.ts packages --coverage"
  },
  "overrides": {
    "lightningcss": "1.23.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.2",
    "@eslint/compat": "1.1.0",
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.5.0",
    "@maxmilton/stylelint-config": "0.0.15",
    "@types/bun": "1.1.5",
    "@types/eslint__eslintrc": "2.1.1",
    "@types/eslint__js": "8.42.3",
    "@types/eslint-plugin-security": "3.0.0",
    "eslint": "9.5.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-unicorn": "54.0.0",
    "happy-dom": "14.12.3",
    "stylelint": "16.6.1",
    "stylelint-config-standard": "36.0.1",
    "typescript": "5.5.2",
    "typescript-eslint": "7.14.1"
  }
}
