{
  "private": true,
  "scripts": {
    "build": "pnpm run -r build",
    "lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:ts",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.{css,xcss}'",
    "lint:js": "eslint --ignore-path .gitignore --ext .tsx,.ts,.mjs,.jsx,.js,.cjs .",
    "lint:ts": "tsc --noEmit",
    "test": "c8 uvu -r tsm packages '\\/test\\/.+\\.test\\.ts$'"
  },
  "devDependencies": {
    "@maxmilton/stylelint-config": "0.0.15",
    "@types/node": "20.10.4",
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "@typescript-eslint/parser": "6.14.0",
    "c8": "8.0.1",
    "esbuild": "0.19.9",
    "eslint": "8.56.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-security": "2.1.0",
    "eslint-plugin-unicorn": "49.0.0",
    "prettier": "3.1.1",
    "prettier-plugin-pkg": "0.18.0",
    "prettier-plugin-sh": "0.13.1",
    "stylelint": "16.0.2",
    "stylelint-config-standard": "35.0.0",
    "tsm": "2.3.0",
    "typescript": "5.3.3",
    "uvu": "0.5.6"
  },
  "c8": {
    "all": true,
    "include": [
      "packages/*/src"
    ],
    "reporter": [
      "text",
      "lcovonly"
    ]
  }
}
