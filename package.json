{
  "private": true,
  "scripts": {
    "build": "pnpm run -r build",
    "lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:ts",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.{css,xcss}'",
    "lint:js": "eslint --ignore-path .gitignore --ext .cjs,.js,.jsx,.mjs,.ts,.tsx .",
    "lint:ts": "tsc --project tsconfig.lint.json",
    "test": "c8 uvu -r tsm packages '\\/test\\/.+\\.test\\.ts$'"
  },
  "devDependencies": {
    "@maxmilton/stylelint-config": "0.0.9",
    "@types/node": "17.0.13",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "c8": "7.11.0",
    "esbuild": "0.14.18",
    "eslint": "8.8.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "16.1.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-unicorn": "40.1.0",
    "prettier": "2.5.1",
    "prettier-plugin-pkg": "0.11.1",
    "prettier-plugin-sh": "0.8.1",
    "stylelint": "14.3.0",
    "stylelint-config-standard": "24.0.0",
    "tsm": "2.2.1",
    "typescript": "4.5.5",
    "uvu": "0.5.3"
  },
  "c8": {
    "all": true,
    "include": [
      "packages/*/src"
    ],
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "./node_modules/prettier-plugin-pkg",
      "./node_modules/prettier-plugin-sh"
    ]
  },
  "stylelint": {
    "reportInvalidScopeDisables": true,
    "reportNeedlessDisables": true,
    "extends": [
      "stylelint-config-standard",
      "@maxmilton/stylelint-config"
    ],
    "ignoreFiles": [
      "**/dist/**",
      "**/node_modules/**"
    ]
  }
}
